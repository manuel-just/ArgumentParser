<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Authors>Manuel Just</Authors>
    <Company>Ypsomed AG</Company>
    <Description>A simple and lightweight utility for parsing command line arguments.</Description>
    <Copyright>2025 Ypsomed AG</Copyright>
    <Version>1.0.1</Version>
    <PackageLicenseExpression>0BSD</PackageLicenseExpression>
    <PackageIcon>ypsomed.png</PackageIcon>
    <PackageIconUrl />
    <RepositoryUrl>https://github.com/manuel-just/ArgumentParser.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes />
    <PackageId>Ypsomed.ArgumentParser</PackageId>
	<PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="ypsomed.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\README.md">
		<Pack>True</Pack>
		<PackagePath></PackagePath>
	</None>
  </ItemGroup>

</Project>
